<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:background="#161B33"
    android:layout_marginLeft="10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/hotMovie_item_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ezuoju" />

    <TextView
        android:id="@+id/hotMovie_item_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评分"
        android:layout_marginTop="-20dp"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/hotMovie_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="反转人生"
        android:maxLines="1"
        android:maxEms="7"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:textSize="15sp" />

    <Button
        android:id="@+id/hotMovie_item_btn"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="购票"
        android:textSize="10sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/goupiao"
        android:textColor="#fff"/>


</LinearLayout>
