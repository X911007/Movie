<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="#1E2444"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/recommend_cinema_item_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/recommend_cinema_item_name"
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/recommend_cinema_item_img"
            android:layout_toRightOf="@id/recommend_cinema_item_img"
            android:text="CGV影城"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/recommend_cinema_item_address"
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:layout_below="@id/recommend_cinema_item_name"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/recommend_cinema_item_img"
            android:text="海淀区清河中街68号"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>
