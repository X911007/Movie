<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RegisteredActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/a" />

        <ImageView
            android:id="@+id/registered_return"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="47dp"
            android:src="@mipmap/back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:background="#161B33"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <EditText
            android:id="@+id/registered_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/inputbox"
            android:hint="请输入昵称"
            android:paddingLeft="30dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/registered_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/inputbox"
            android:hint="请输入邮箱账号"
            android:paddingLeft="30dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp">


            <EditText
                android:id="@+id/registered_pwd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/inputbox"
                android:hint="请设置密码"
                android:paddingLeft="30dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/empty_pwd"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_marginRight="70dp"
                android:src="@mipmap/clear" />

            <ImageView
                android:id="@+id/show_pwd"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/yanjing" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <EditText
                android:id="@+id/registered_s_code"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/inputbox"
                android:hint="请输入验证码"
                android:paddingLeft="30dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/registered_h_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/inputbox5"
                android:text="获取验证码" />
        </RelativeLayout>

        <TextView
            android:id="@+id/registered_t_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:text="已有账号  立即登录"
            android:textColor="#fff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/registered"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/inputbox2"
            android:text="注册"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>